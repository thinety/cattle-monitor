{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./out"
  },
  "files": [
    "src/dev.ts",
    "src/preload.ts",
    "src/prod.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
