{
  "name": "cattle-monitor",
  "version": "0.7.0",
  "private": true,
  "workspaces": [
    "main",
    "preload",
    "renderer"
  ],
  "scripts": {
    "dev:watch": "webpack --mode development --watch",
    "dev": "electron .",
    "build": "webpack --mode production && electron-builder"
  },
  "main": "out/main.js",
  "build": {
    "directories": {
      "output": "dist"
    },
    "files": [
      "out"
    ],
    "win": {
      "artifactName": "CattleMonitor.exe",
      "target": "portable"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "electron": "^13.2.3",
    "electron-builder": "^22.11.7",
    "electron-releases": "^3.775.0",
    "html-minimizer-webpack-plugin": "^3.1.1",
    "mini-css-extract-plugin": "^2.2.0",
    "sass": "^1.38.2",
    "sass-loader": "^12.1.0",
    "semver": "^7.3.5",
    "terser-webpack-plugin": "^5.1.4",
    "typescript": "^4.4.2",
    "webpack": "^5.54.0",
    "webpack-cli": "^4.8.0"
  }
}
